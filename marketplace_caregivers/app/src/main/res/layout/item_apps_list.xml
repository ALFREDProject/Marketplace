<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Frame"
    android:layout_width="274.66dp"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <View
        android:id="@+id/view1"
        android:layout_width="fill_parent"
               android:layout_height="0.66dp"
 android:background="@color/White"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:orientation="horizontal" android:gravity="center_vertical">

        <com.tempos21.market.ui.view.RoundeCornersImage
            android:id="@+id/appIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"/>

        <TextView
            android:id="@+id/appTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView"
            android:textColor="#828282"
            android:textSize="@dimen/TextBig"
            android:layout_marginRight="8dp" android:ellipsize="end" android:maxLines="2"/>

        <RatingBar
            android:id="@+id/appRating"
            android:layout_width="wrap_content"
        android:layout_height="@dimen/StarsSmall"
            android:isIndicator="true"
            android:max="5"
            android:numStars="5"
            android:progressDrawable="@drawable/rating_bar_full"
            android:rating="3.4" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6.66dp"
            android:src="@drawable/basic_arrow_right" android:layout_marginLeft="12dp"/>
    </LinearLayout>

    <View
        android:id="@+id/View01"
        android:layout_width="fill_parent"
        android:layout_height="0.66dp"
        android:background="@color/LightGray" />

</LinearLayout>