<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width='274.66dp'
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <View
        android:id="@+id/View01"
        android:layout_width="fill_parent"
        android:layout_height="0.66dp"
        android:background="@color/White" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="50dp" android:gravity="center_vertical">

        <TextView
            android:id="@+id/nameCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="@color/DarkGray"
            android:textSize="18.66dp" android:layout_weight="1" android:maxLines="1"/>

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="24dp"
            android:src="@drawable/basic_arrow_right" android:layout_marginLeft="20dp"/>

    </LinearLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="fill_parent"
        android:layout_height="0.66dp"
        android:background="@color/LightGray" />

</LinearLayout>