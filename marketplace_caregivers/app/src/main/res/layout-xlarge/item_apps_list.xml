<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Frame"
    android:layout_width="460dp"
    android:layout_height="150dp"
    android:orientation="vertical" android:paddingLeft="18dp" android:paddingRight="18dp">

    <View
        android:id="@+id/view1"
        android:layout_width="fill_parent"
               android:layout_height="0.66dp"
 android:background="@color/White"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:orientation="horizontal" android:gravity="center_vertical">

        <com.tempos21.market.ui.view.RoundeCornersImage
            android:id="@+id/appIcon"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="8dp"/>

        <TextView
            android:id="@+id/appTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView"
            android:textColor="#828282"
            android:textSize="@dimen/TextNormal"
            android:layout_marginRight="8dp" android:ellipsize="end" android:maxLines="2"/>

        <RatingBar
            android:id="@+id/appRating"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:isIndicator="true"
            android:max="5"
            android:numStars="5"
            android:progressDrawable="@drawable/rating_bar_full"
            android:rating="3.4" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6.66dp"
            android:src="@drawable/basic_arrow_right" android:layout_marginLeft="12dp"/>
    </LinearLayout>

    <View
        android:id="@+id/View01"
        android:layout_width="fill_parent"
        android:layout_height="0.66dp"
        android:background="@color/LightGray" />

</LinearLayout>